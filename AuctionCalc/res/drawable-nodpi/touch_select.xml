<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ボタンが押されたときの定義 -->
    <item android:state_pressed="true" >
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android">
            <solid
                android:color="@color/touch" />
        </shape>
    </item>

    <!-- ボタンが押されていないときの定義 -->
    <item android:state_pressed="false">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android">
            <solid
                android:color="@color/white" />
        </shape>
    </item>
</selector>